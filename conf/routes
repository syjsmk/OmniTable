# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.AppController.index
#GET     /robby                      controllers.RobbyController.index
GET     /robby/rooms                controllers.RobbyController.getRooms()
GET     /robby/websocket            controllers.RobbyController.roomsWebSocket()

#이거 없으면 POST 했을 때 문제 생김
+ nocsrf
POST    /robby                      controllers.RobbyController.makeRoom()
+ nocsrf
POST    /robby/:id                  controllers.RobbyController.updateRoom(id: Int)

+ nocsrf
DELETE  /robby/:id                  controllers.RobbyController.deleteRoom(id: Int)

#GET     /room                       controllers.RoomController.index
#GET     /room/:id                   controllers.RoomController.getRoom(id: Int)
GET     /room/:id                   controllers.RoomController.index(id: Int)
GET     /room/data/:id              controllers.RoomController.getRoom(id: Int)
GET     /room/:id/websocket         controllers.RoomController.roomWebSocket(id: Int)

# id를 userId, roomId로 나눠야 하지 않을까?



GET     /character                  controllers.CharacterController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
->      /webjars                    webjars.Routes